{
  "manifest_version": 3,
  "name": "Page Info & Cookie Manager",
  "version": "1.0",
  "description": "Display page information and manage cookies with runtime permissions",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],

  "optional_permissions": [
    "cookies"
  ],

  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "",
    "default_title": "Show Page Info"
  },
  
  "icons": {
    "16": "icon16.png"
    
  }
}